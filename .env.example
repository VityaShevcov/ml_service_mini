# ML Chat Billing Service Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (default for development)
DATABASE_URL=sqlite:///./ml_chat_service.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/ml_chat_service

# MySQL (alternative)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/ml_chat_service

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate secure keys for production!
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# ML MODEL CONFIGURATION
# =============================================================================
# Credit costs per model usage
GEMMA3_1B_COST=10
GEMMA3_12B_COST=50

# Response generation limits
MAX_RESPONSE_LENGTH=500
DEFAULT_TEMPERATURE=0.7

# Model loading configuration
LAZY_LOADING=true
MODEL_CACHE_SIZE=2
RESPONSE_CACHE_SIZE=1000
RESPONSE_CACHE_TTL_HOURS=24

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Memory management
MEMORY_CLEANUP_THRESHOLD=0.85
AUTO_CLEANUP_INTERVAL_MINUTES=5

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Caching
ENABLE_RESPONSE_CACHING=true
ENABLE_MODEL_CACHING=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/ml_chat_service.log

# Structured logging
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_ERROR_TRACKING=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# System monitoring
ENABLE_SYSTEM_MONITORING=true
MONITORING_INTERVAL_SECONDS=30

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_ALERT_THRESHOLD=5000  # milliseconds

# Health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=60

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Default user credits
DEFAULT_USER_CREDITS=100

# Credit packages (JSON format)
CREDIT_PACKAGES=[
  {"amount": 100, "price": 5.00, "bonus": 0, "description": "Starter Pack"},
  {"amount": 250, "price": 10.00, "bonus": 25, "description": "Popular Choice"},
  {"amount": 500, "price": 20.00, "bonus": 75, "description": "Best Value"},
  {"amount": 1000, "price": 35.00, "bonus": 200, "description": "Power User"},
  {"amount": 2500, "price": 75.00, "bonus": 625, "description": "Enterprise"}
]

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Redis for caching (optional)
# REDIS_URL=redis://localhost:6379/0

# Email service (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# Payment processing (optional)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# PAYPAL_CLIENT_ID=your-paypal-client-id
# PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development-specific settings
RELOAD_ON_CHANGE=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_CORS=true

# Testing
TEST_DATABASE_URL=sqlite:///./test_ml_chat_service.db
ENABLE_TEST_MODE=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Production-specific settings
ENABLE_HTTPS=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Reverse proxy settings
TRUST_PROXY_HEADERS=true
ALLOWED_HOSTS=["yourdomain.com", "www.yourdomain.com"]

# Security headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSRF_PROTECTION=true

# =============================================================================
# DOCKER CONFIGURATION (if using Docker)
# =============================================================================
# Container-specific settings
CONTAINER_MODE=false
DOCKER_NETWORK=ml-chat-network
DOCKER_VOLUME_PATH=/app/data